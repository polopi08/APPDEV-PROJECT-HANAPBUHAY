@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HanapBuhay - Chats</title>
    <link rel="stylesheet" href="~/Styles/ChatPage_W_styles.css">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <img src="~/Images/HanapBuhay_Logo.png" alt="HanapBuhay Logo">
            </div>

            <div class="nav-links">
                <a href="@Url.Action("JobReqPage_W", "Worker")"><button class="home-btn"><ion-icon name="home-outline"></ion-icon></button></a>
                <a href="@Url.Action("ChatPage_W", "Worker")"><button class="chat-btn"><ion-icon name="chatbubble-ellipses-outline" class="active"></ion-icon></button></a>
                <a href="@Url.Action("NotifPage_W", "Worker")"><button class="notif-btn"><ion-icon name="notifications-outline"></ion-icon></button></a>
                <a href="@Url.Action("Profile_W", "Worker")"><button class="person-btn"><ion-icon name="person-outline"></ion-icon></button></a>
                <a href="@Url.Action("LandingPage", "Home")"><button class="logout-btn"><ion-icon name="log-in-outline"></ion-icon></button></a>
            </div>
        </div>
    </header>

    <!-- Chat Container -->
    <div class="chat-container">
        <!-- Left Sidebar -->
        <div class="chat-sidebar">
            <div class="chat-header">
                <h2>Chats</h2>
                <button class="new-chat-btn">
                    <ion-icon name="create-outline"></ion-icon>
                </button>
            </div>

            <div class="search-box">
                <div class="search-input-wrapper">
                    <ion-icon name="search-outline"></ion-icon>
                    <input type="text" class="search-input" placeholder="Search services...">
                </div>
            </div>

            <div class="chat-list">
                <!-- Conversations will be loaded dynamically -->
            </div>
        </div>

        <!-- Right Side - Chat Window -->
        <div class="chat-window">
            <div class="chat-window-header">
                <div class="current-chat-avatar">
                    <ion-icon name="person-outline"></ion-icon>
                </div>
                <div class="current-chat-info">
                    <h3>Select a chat</h3>
                    <div class="current-chat-status">Active now</div>
                </div>
            </div>

            <div class="chat-messages">
                <div style="text-align: center; padding: 40px; color: #999;">
                    <ion-icon name="chatbubbles-outline" style="font-size: 60px; display: block; margin-bottom: 15px;"></ion-icon>
                    <p>Select a conversation to start messaging</p>
                </div>
            </div>

            <div class="chat-input-area">
                <button class="attach-btn">
                    <ion-icon name="add-circle-outline"></ion-icon>
                </button>
                <input type="text" class="chat-input" placeholder="Type a message...">
                <button class="send-btn">
                    <ion-icon name="send-outline"></ion-icon>
                </button>
                <button class="work-done-btn" id="workDoneBtn" style="display: none;">
                    <ion-icon name="checkmark-done-outline"></ion-icon>
                    Work Done
                </button>
            </div>
        </div>
    </div>

    <!-- Work Done Modal -->
    <div id="workDoneModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Mark Work as Complete</h2>
                <button class="modal-close" id="closeModalBtn">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to mark this job as complete? The client will be able to review your work.</p>
                <button id="confirmWorkDoneBtn" class="btn-confirm">Confirm</button>
                <button id="cancelWorkDoneBtn" class="btn-cancel">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Get all chat items
        const chatWindowHeader = document.querySelector('.current-chat-info h3');
        const chatMessages = document.querySelector('.chat-messages');
        const chatInput = document.querySelector('.chat-input');
        const sendBtn = document.querySelector('.send-btn');
        const chatList = document.querySelector('.chat-list');
        let selectedConversationId = null;
        let lastLoadedMessageCount = 0;
        let messageRefreshInterval = null;

        // ===== NEW: Work Done button elements =====
        const workDoneBtn = document.getElementById('workDoneBtn');
        const workDoneModal = document.getElementById('workDoneModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const confirmWorkDoneBtn = document.getElementById('confirmWorkDoneBtn');
        const cancelWorkDoneBtn = document.getElementById('cancelWorkDoneBtn');
        let selectedJobRequestId = null;

        // ===== Load conversations dynamically =====
        function loadConversations() {
            fetch('/api/worker/conversations')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(conversations => {
                    chatList.innerHTML = '';
                    
                    if (!conversations || conversations.length === 0) {
                        chatList.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">No active conversations yet.</div>';
                        return;
                    }
                    
                    conversations.forEach(conv => {
                        const chatItem = document.createElement('div');
                        chatItem.className = 'chat-item';
                        chatItem.setAttribute('data-conversation-id', conv.conversationId);
                        chatItem.setAttribute('data-client-name', conv.clientName || 'Client');
                        
                        chatItem.innerHTML = `
                            <div class="chat-avatar" style="background: #FFE5B4;">
                                <ion-icon name="person-outline"></ion-icon>
                            </div>
                            <div class="chat-info">
                                <div class="chat-name">${conv.clientName || 'Client'}</div>
                                <div class="chat-preview">Click to view messages</div>
                            </div>
                        `;
                        
                        // ===== Attach click listener immediately when creating the item =====
                        chatItem.addEventListener('click', async function() {
                            // Remove active class from all items
                            document.querySelectorAll('.chat-item').forEach(el => {
                                el.classList.remove('active');
                                el.style.background = '';
                            });

                            // Add active class to clicked item
                            this.classList.add('active');
                            this.style.background = '#FFF8E7';

                            // Get conversation ID and client name
                            selectedConversationId = this.getAttribute('data-conversation-id');
                            const clientName = this.getAttribute('data-client-name');
                            
                            // Update the chat window header
                            chatWindowHeader.textContent = clientName;
                            lastLoadedMessageCount = 0;

                            // Clear previous interval
                            if (messageRefreshInterval) {
                                clearInterval(messageRefreshInterval);
                            }

                            // Load messages immediately
                            loadMessages(selectedConversationId, true);

                            // Auto-refresh messages every 2 seconds
                            messageRefreshInterval = setInterval(() => {
                                loadMessages(selectedConversationId, false);
                            }, 2000);

                            // ===== Check job status and show/hide Work Done button =====
                            await checkJobStatus(selectedConversationId);
                        });
                        
                        chatList.appendChild(chatItem);
                    });
                })
                .catch(error => {
                    console.error('Error loading conversations:', error);
                    chatList.innerHTML = '<div style="padding: 20px; color: #d9534f;">Error loading conversations</div>';
                });
        }

        // Load conversations on initial page load
        loadConversations();

        // Load messages function
        function loadMessages(conversationId, forceRefresh = false) {
            fetch(`/api/worker/messages/${conversationId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(messages => {
                    const shouldRefresh = forceRefresh || messages.length !== lastLoadedMessageCount;
                    
                    if (shouldRefresh) {
                        chatMessages.innerHTML = '';
                        lastLoadedMessageCount = messages.length;
                        
                        if (!messages || messages.length === 0) {
                            chatMessages.innerHTML = '<div style="text-align: center; padding: 20px; color: #999;">No messages yet. Start the conversation!</div>';
                            return;
                        }
                        
                        messages.forEach(msg => {
                            const messageDiv = document.createElement('div');
                            messageDiv.className = `message ${msg.isFromWorker ? 'sent' : 'received'}`;
                            messageDiv.innerHTML = `
                                <div class="message-avatar">
                                    <ion-icon name="person-outline"></ion-icon>
                                </div>
                                <div class="message-content">
                                    <div class="message-sender">${msg.senderName || 'Unknown'}</div>
                                    <div class="message-bubble">${msg.content || ''}</div>
                                    <div class="message-time">${new Date(msg.timestamp).toLocaleTimeString()}</div>
                                </div>
                            `;
                            chatMessages.appendChild(messageDiv);
                        });
                        
                        // Auto scroll to bottom
                        setTimeout(() => {
                            chatMessages.scrollTop = chatMessages.scrollHeight;
                        }, 0);
                    }
                })
                .catch(error => {
                    console.error('Error loading messages:', error);
                    chatMessages.innerHTML = '<div style="text-align: center; padding: 20px; color: red;">Error loading messages</div>';
                });
        }

        // Function to send message
        async function sendMessage() {
            if (!selectedConversationId) {
                alert('Please select a conversation first');
                return;
            }

            const messageText = chatInput.value.trim();

            if (messageText === '') return;

            sendBtn.disabled = true;

            try {
                const response = await fetch('/api/worker/messages/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        ConversationId: selectedConversationId,
                        Content: messageText
                    })
                });

                if (response.ok) {
                    chatInput.value = '';
                    // Force reload messages after sending
                    setTimeout(() => {
                        loadMessages(selectedConversationId, true);
                    }, 100);
                } else {
                    const errorText = await response.text();
                    console.error('Error response:', errorText);
                    alert('Error sending message');
                }
            } catch (error) {
                console.error('Error sending message:', error);
                alert('Error sending message: ' + error.message);
            } finally {
                sendBtn.disabled = false;
                chatInput.focus();
            }
        }

        // Send button click
        sendBtn.addEventListener('click', sendMessage);

        // Send message with Enter key
        chatInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !sendBtn.disabled) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Work Done button click
        workDoneBtn.addEventListener('click', function() {
            const modal = document.getElementById('workDoneModal');
            modal.style.display = 'block';
        });

        // Close modal
        document.getElementById('closeModalBtn').addEventListener('click', function() {
            const modal = document.getElementById('workDoneModal');
            modal.style.display = 'none';
        });

        // Confirm Work Done
        document.getElementById('confirmWorkDoneBtn').addEventListener('click', async function() {
            const modal = document.getElementById('workDoneModal');
            modal.style.display = 'none';

            // Add your logic here to handle work done action
            alert('Work has been marked as complete');
        });

        // Cancel Work Done
        document.getElementById('cancelWorkDoneBtn').addEventListener('click', function() {
            const modal = document.getElementById('workDoneModal');
            modal.style.display = 'none';
        });

        // ===== NEW: Check job status and show/hide Work Done button =====
        async function checkJobStatus(conversationId) {
            try {
                const response = await fetch(`/api/worker/job-status/${conversationId}`);
                if (response.ok) {
                    const data = await response.json();
                    selectedJobRequestId = data.jobRequestId;
                    
                    // Show Work Done button only if job status is "Accepted"
                    if (data.status === 'Accepted') {
                        workDoneBtn.style.display = 'flex';
                    } else {
                        workDoneBtn.style.display = 'none';
                    }
                }
            } catch (error) {
                console.error('Error checking job status:', error);
                workDoneBtn.style.display = 'none';
            }
        }

        // ===== NEW: Mark work as done and complete job =====
        async function markWorkAsDone() {
            if (!selectedJobRequestId) {
                alert('Job request not found');
                return;
            }

            try {
                const response = await fetch(`/api/worker/mark-work-done/${selectedJobRequestId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    alert('Work marked as complete! The client can now review your work.');
                    workDoneBtn.style.display = 'none';
                    location.reload();
                } else {
                    alert('Error marking work as complete. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error marking work as complete');
            }
        }

        // Confirm Work Done
        document.getElementById('confirmWorkDoneBtn').addEventListener('click', async function() {
            const modal = document.getElementById('workDoneModal');
            modal.style.display = 'none';
            await markWorkAsDone();
        });

        // Cleanup interval when leaving page
        window.addEventListener('beforeunload', function() {
            if (messageRefreshInterval) {
                clearInterval(messageRefreshInterval);
            }
        });
    </script>
</body>
</html></html></html></html>