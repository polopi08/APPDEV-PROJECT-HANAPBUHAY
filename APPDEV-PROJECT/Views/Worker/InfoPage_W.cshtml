@model APPDEV_PROJECT.Models.InfoPage_Worker_ViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HanapBuhay - Information</title>
    <link rel="stylesheet" href="~/Styles/InfoPage_W_styles.css">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <img src="~/Images/HanapBuhay_Logo.png" alt="HanapBuhay Logo">
            </div>

            <div class="nav-links">
                <a href="@Url.Action("LandingPage", "Home")" class="logout-btn">
                    <ion-icon name="log-in-outline"></ion-icon>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="form-container">
            <div class="form-header">
                <h1>Fill Up Information</h1>
                <p class="breadcrumb">Tell Us About Yourself</p>
            </div>

            <!-- ===== UPDATED: Changed to POST form with proper model binding ===== -->
            <form class="registration-form" method="post" action="@Url.Action("InfoPage_W", "Worker")">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div style="color: red; margin-bottom: 15px;">
                        @Html.ValidationSummary(true)
                    </div>
                }

                <!-- Personal Details Section -->
                <section class="form-section">
                    <h2 class="section-title">Personal Details</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="FName">First Name</label>
                            <input type="text" id="FName" name="FName" required asp-for="FName" value="@Model?.FName">
                        </div>
                        <div class="form-group">
                            <label for="Mname">Middle Name</label>
                            <input type="text" id="Mname" name="Mname" asp-for="Mname" value="@Model?.Mname">
                        </div>
                        <div class="form-group">
                            <label for="LName">Last Name</label>
                            <input type="text" id="LName" name="LName" required asp-for="LName" value="@Model?.LName">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="DateOfBirth">Date of Birth</label>
                            <input type="date" id="DateOfBirth" name="DateOfBirth" required asp-for="DateOfBirth" value="@Model?.DateOfBirth.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="form-group">
                            <label for="Sex">Sex</label>
                            <select id="Sex" name="Sex" required asp-for="Sex">
                                <option value="">Select</option>
                                <option value="male" selected="@(Model?.Sex == "male")">Male</option>
                                <option value="female" selected="@(Model?.Sex == "female")">Female</option>
                                <option value="other" selected="@(Model?.Sex == "other")">Other</option>
                            </select>
                        </div>
                        <div class="form-group-empty"></div>
                    </div>
                </section>

                <!-- removed na yng valid id section -->
                

                <!-- Contact Information Section -->
                <section class="form-section" id="contact-information">
                    <h2 class="section-title">Contact Information</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" required asp-for="Email" value="@Model?.Email">
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Phone Number</label>
                            <input type="tel" id="PhoneNumber" name="PhoneNumber" required asp-for="PhoneNumber" value="@Model?.PhoneNumber">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex: 1;">
                            <label for="Address">Address <span style="color: red;">*</span></label>
                            <input type="text" id="Address" name="Address" required asp-for="Address" value="@Model?.Address" placeholder="e.g., Pamana Building, Damka St., San Juan Greenhills, San Juan City, Metro Manila, Philippines">
                            <small style="display: block; margin-top: 5px; color: #666;">Format: Building Name, Street Name, Barangay, City, Province, Country</small>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="Barangay">Barangay <span style="color: red;">*</span></label>
                            <select id="Barangay" name="Barangay" required>
                                <option value="">-- Select your barangay in San Juan --</option>
                                <option value="San Juan Greenhills">San Juan Greenhills</option>
                                <option value="San Juan Addition Hills">San Juan Addition Hills</option>
                                <option value="Corazon de Jesus">Corazon de Jesus</option>
                                <option value="West Crame">West Crame</option>
                                <option value="West Greenhills">West Greenhills</option>
                                <option value="San Juan Pinaglabanan">San Juan Pinaglabanan</option>
                                <option value="Balong-Bato">Balong-Bato</option>
                                <option value="F. Manalo">F. Manalo</option>
                                <option value="San Juan del Monte">San Juan del Monte</option>
                            </select>
                            <small style="display: block; margin-top: 5px; color: #666;">Must be in San Juan to appear in client searches</small>
                        </div>
                    </div>
                </section>

                <!-- Work Background Section -->
                <section class="form-section" id="work-background">
                    <h2 class="section-title">Work Background</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="Skill">Skill/Work</label>
                            <input type="text" id="Skill" name="Skill" required asp-for="Skill" value="@Model?.Skill">
                        </div>
                        <div class="form-group">
                            <label for="YearsOfExperience">Years of Experience</label>
                            <input type="number" id="YearsOfExperience" name="YearsOfExperience" min="0" required asp-for="YearsOfExperience" value="@Model?.YearsOfExperience">
                        </div>
                        <div class="form-group">
                            <label for="Accomplishments">Accomplishments</label>
                            <input type="text" id="Accomplishments" name="Accomplishments" asp-for="Accomplishments" value="@Model?.Accomplishments">
                        </div>
                    </div>
                </section>

                <!-- Submit Button -->
                <div class="submit-container">
                    <button type="submit" class="submit-btn">
                        <ion-icon name="checkmark-circle-outline"></ion-icon>
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>