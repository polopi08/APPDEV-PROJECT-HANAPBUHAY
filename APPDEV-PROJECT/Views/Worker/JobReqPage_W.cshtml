@{
    Layout = null;
}
@model List<APPDEV_PROJECT.Models.Entities.JobRequest>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HanapBuhay - Incoming Job Requests</title>

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <!-- External CSS -->
    <link rel="stylesheet" href="~/Styles/JobReqPage_W_styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <img src="~/Images/HanapBuhay_Logo.png" alt="HanapBuhay Logo">
            </div>

            <div class="nav-links">
                <a href="@Url.Action("JobReqPage_W", "Worker")"><button class="home-btn"><ion-icon name="home-outline" class="active"></ion-icon></button></a>
                <a href="@Url.Action("ChatPage_W", "Worker")"><button class="chat-btn"><ion-icon name="chatbubble-ellipses-outline"></ion-icon></button></a>
                <a href="@Url.Action("NotifPage_W", "Worker")"><button class="notif-btn"><ion-icon name="notifications-outline"></ion-icon></button></a>
                <a href="@Url.Action("Profile_W", "Worker")"><button class="person-btn"><ion-icon name="person-outline"></ion-icon></button></a>
                <a href="@Url.Action("LandingPage", "Home")"><button class="logout-btn"><ion-icon name="log-in-outline"></ion-icon></button></a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="page-header">
            <h1>Incoming Job Requests</h1>
            <p>Clients who want to hire you</p>
        </div>

        <hr class="divider">

        <!-- Job Requests Grid -->
        <div class="requests-grid">
            @if (Model == null || Model.Count == 0)
            {
                <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: #999;">
                    <ion-icon name="inbox-outline" style="font-size: 60px; display: block; margin-bottom: 15px;"></ion-icon>
                    <p style="font-size: 16px;">No incoming job requests yet.</p>
                </div>
            }
            else
            {
                @foreach (var request in Model)
                {
                    <div class="request-card">
                        <div class="card-content">
                            <div class="profile-image">
                                <div class="profile-placeholder"></div>
                            </div>
                            <div class="card-details">
                                <div class="client-name">@request.Client?.FullName ?? "Unknown Client"</div>
                                <div class="detail-item">
                                    <ion-icon name="location-outline"></ion-icon>
                                    <span>@(request.Client?.Address ?? "Location not specified")</span>
                                </div>
                                <div class="detail-item">
                                    <ion-icon name="calendar-outline"></ion-icon>
                                    <span>@request.RequestDate.ToString("MMM d, yyyy h:mm tt")</span>
                                </div>
                                <div class="request-message">
                                    "@(request.ServiceDetails ?? "No details provided")"
                                </div>
                            </div>
                        </div>
                        <div class="card-actions">
                            <button class="btn btn-accept" onclick="acceptRequest('@request.JobRequestId')">Accept</button>
                            <button class="btn btn-reject" onclick="rejectRequest('@request.JobRequestId')">Reject</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script>
        function acceptRequest(jobRequestId) {
            if (confirm('Accept this job request?')) {
                fetch(`/api/booking/accept/${jobRequestId}`, {
                    method: 'POST'
                })
                .then(response => {
                    if (response.ok) {
                        alert('Job request accepted!');
                        location.reload();
                    } else {
                        alert('Error accepting request. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error accepting request. Please try again.');
                });
            }
        }

        function rejectRequest(jobRequestId) {
            if (confirm('Reject this job request?')) {
                fetch(`/api/booking/reject/${jobRequestId}`, {
                    method: 'POST'
                })
                .then(response => {
                    if (response.ok) {
                        alert('Job request rejected.');
                        location.reload();
                    } else {
                        alert('Error rejecting request. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error rejecting request. Please try again.');
                });
            }
        }
    </script>
</body>
</html>