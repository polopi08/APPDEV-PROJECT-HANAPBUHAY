@model APPDEV_PROJECT.Models.Entities.Worker
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HanapBuhay - @Model?.FullName</title>
    <link rel="stylesheet" href="~/Styles/Profile_W_styles.css" />
    <style>
        /* Read-only mode styling */
        .read-only-mode textarea,
        .read-only-mode input[type="text"],
        .read-only-mode input[type="email"],
        .read-only-mode input[type="tel"],
        .read-only-mode input[type="date"],
        .read-only-mode select {
            background-color: #f5f5f5;
            cursor: not-allowed;
            opacity: 0.9;
        }

        .read-only-mode .btn-new-app,
        .read-only-mode form button[type="submit"],
        .read-only-mode #photoInput {
            display: none;
        }

        .read-only-mode .avatar {
            cursor: default;
        }

        .read-only-mode .avatar-placeholder {
            display: none;
        }

        .read-only-banner {
            background-color: #e3f2fd;
            border-left: 4px solid #2196F3;
            padding: 12px 16px;
            margin-bottom: 20px;
            border-radius: 4px;
            color: #1565c0;
            font-weight: 500;
        }

        .back-button {
            display: inline-block;
            margin-bottom: 20px;
            padding: 8px 16px;
            background-color: #f0f0f0;
            border: 1px solid #ddd;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            color: #333;
            transition: background-color 0.3s;
        }

        .back-button:hover {
            background-color: #e0e0e0;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <img src="~/Images/HanapBuhay_Logo.png" alt="HanapBuhay Logo">
            </div>

            <div class="nav-links">
                <a href="@Url.Action("SearchPage_C", "Client")"><button class="home-btn"><ion-icon name="home-outline"></ion-icon></button></a>
                <a href="@Url.Action("Messages", "Client")"><button class="chat-btn"><ion-icon name="chatbubble-ellipses-outline"></ion-icon></button></a>
                <a href="@Url.Action("Notifications", "Client")"><button class="notif-btn"><ion-icon name="notifications-outline"></ion-icon></button></a>
                <a href="@Url.Action("Profile", "Client")"><button class="person-btn"><ion-icon name="person-outline"></ion-icon></button></a>
                <a href="@Url.Action("LandingPage", "Home")"><button class="logout-btn"><ion-icon name="log-in-outline"></ion-icon></button></a>
            </div>
        </div>
    </header>

    <div class="container">
        <div>
            <a href="@Url.Action("SearchPage_C", "Client")" class="back-button">
                <ion-icon name="arrow-back-outline"></ion-icon> Back to Search
            </a>

            <div class="read-only-banner">
                <ion-icon name="information-circle-outline"></ion-icon>
                You are viewing this worker's profile. Contact them to discuss services.
            </div>

            @if (Model != null)
            {
                <!-- ===== PROFILE CARD - READ-ONLY ===== -->
                <div class="card profile-card read-only-mode">
                    <div class="avatar">
                        <img id="profileImage" src="" alt="Profile Picture" class="profile-img">
                        <div class="avatar-placeholder" id="placeholder">
                            <span class="add-photo-icon"><ion-icon name="camera-outline"></ion-icon></span>
                            <span class="add-photo-text">Add Photo</span>
                        </div>
                        <input type="file" id="photoInput" accept="image/*" style="display: none;">
                    </div>
                    <!-- ===== DISPLAY NAME, ADDRESS, EXPERIENCE FROM DATABASE ===== -->
                    <div class="name">@Model.FullName</div>
                    <div class="title">@Model.Skill</div>
                    <div class="location">@Model.Address</div>

                    <div class="stats">
                        <div class="stat">
                            <div class="stat-value">23</div>
                            <div class="stat-label">Projects Completed</div>
                        </div>
                        <div class="stat">
                            <div class="stat-value">4.9</div>
                            <div class="stat-label">Rating</div>
                        </div>
                        <div class="stat">
                            <div class="stat-value">@Model.YearsOfExperience+</div>
                            <div class="stat-label">Years Experience</div>
                        </div>
                    </div>

                    <div class="buttons">
                        <button class="btn btn-report" id="reportBtn">
                            <ion-icon name="alert-circle-outline"></ion-icon> Report
                        </button>
                        <button class="btn btn-contact" onclick="openContactModal()">
                            <ion-icon name="call-outline"></ion-icon> Contact Now
                        </button>
                    </div>
                </div>

                <!-- ===== ACCOMPLISHMENT SECTION - READ-ONLY ===== -->
                <div class="card about-section read-only-mode">
                    <div class="section-title">
                        Accomplishment <ion-icon name="person-circle-outline"></ion-icon>
                    </div>

                    <div class="about-textarea" style="padding: 15px; background-color: #f9f9f9; border-radius: 4px; border: 1px solid #ddd; white-space: pre-wrap; word-wrap: break-word;">
                        @(string.IsNullOrEmpty(Model.Accomplishments) ? "No accomplishments listed yet." : Model.Accomplishments)
                    </div>
                </div>
            }
            else
            {
                <div class="error-message">
                    <p>Unable to load worker profile.</p>
                </div>
            }
        </div>

        <div>
            <div class="card">
                <div class="section-title">Portfolio Highlights</div>
                <div class="highlights">
                    <div class="highlight">
                        <div class="highlight-value">23+</div>
                        <div class="highlight-label">Projects Completed</div>
                    </div>
                    <div class="highlight">
                        <div class="highlight-value">@Model?.YearsOfExperience+</div>
                        <div class="highlight-label">Years Experience</div>
                    </div>
                    <div class="highlight">
                        <div class="highlight-value">4.9</div>
                        <div class="highlight-label">Client Rating</div>
                    </div>
                </div>
            </div>

            <div class="card" style="margin-top: 20px;">
                <div class="section-title">Client Reviews</div>
                <div class="reviews-grid">
                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-name">Maria S.</div>
                            <div class="stars">?????</div>
                        </div>
                        <div class="review-text">
                            Professional and efficient. Fixed my problem in no time.
                        </div>
                    </div>

                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-name">Liza M.</div>
                            <div class="stars">?????</div>
                        </div>
                        <div class="review-text">
                            Friendly, fast, and trustworthy technician.
                        </div>
                    </div>

                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-name">Mark R.</div>
                            <div class="stars">????<span class="star-empty">?</span></div>
                        </div>
                        <div class="review-text">
                            Very professional, just took a little longer than expected.
                        </div>
                    </div>

                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-name">Monkey I.</div>
                            <div class="stars">?????</div>
                        </div>
                        <div class="review-text">
                            What a nice one, Thumbs Up!
                        </div>
                    </div>

                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-name">Carlo D.</div>
                            <div class="stars">????<span class="star-empty">?</span></div>
                        </div>
                        <div class="review-text">
                            Very reliable. Excellent at troubleshooting.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Modal -->
    <div class="modal-overlay" id="reportModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Report Content</h2>
                <button class="modal-close" id="closeModal">
                    <ion-icon name="close-outline"></ion-icon>
                </button>
            </div>
            <div class="modal-body">
                <div class="report-question">What are you reporting?</div>
                <div class="reason-grid">
                    <button class="reason-btn" data-reason="inappropriate">
                        <ion-icon name="warning-outline"></ion-icon>
                        Inappropriate Content
                    </button>
                    <button class="reason-btn" data-reason="misleading">
                        <ion-icon name="alert-outline"></ion-icon>
                        Misleading Info
                    </button>
                    <button class="reason-btn" data-reason="scam">
                        <ion-icon name="shield-outline"></ion-icon>
                        Scam
                    </button>
                    <button class="reason-btn" data-reason="spam">
                        <ion-icon name="mail-outline"></ion-icon>
                        Spam or Ads
                    </button>
                    <button class="reason-btn" data-reason="fake">
                        <ion-icon name="person-outline"></ion-icon>
                        Fake Profile
                    </button>
                    <button class="reason-btn" data-reason="harassment">
                        <ion-icon name="hand-left-outline"></ion-icon>
                        Harassment
                    </button>
                    <button class="reason-btn" data-reason="violence">
                        <ion-icon name="pulse-outline"></ion-icon>
                        Violence/Threats
                    </button>
                    <button class="reason-btn" data-reason="other">
                        <ion-icon name="ellipsis-horizontal-outline"></ion-icon>
                        Other
                    </button>
                </div>

                <div class="form-group">
                    <label class="form-label">Content type</label>
                    <select class="form-select">
                        <option>Select content type</option>
                        <option>Profile Information</option>
                        <option>Service Description</option>
                        <option>Reviews</option>
                        <option>Photos</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-textarea" placeholder="Provide specific details about what you're reporting..."></textarea>
                </div>

                <div class="important-notice">
                    <ion-icon name="information-circle-outline"></ion-icon>
                    <div class="notice-text">
                        <strong>Important Notice:</strong> False reports may result in account suspension. Please report content that violates our community guidelines.
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="modal-btn modal-btn-cancel" id="cancelBtn">Cancel</button>
                    <button class="modal-btn modal-btn-submit">Submit Report</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Modal -->
    <div class="modal-overlay" id="contactModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Contact @Model?.FullName</h2>
                <button class="modal-close" id="closeContactModal">
                    <ion-icon name="close-outline"></ion-icon>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <p style="padding: 10px; background-color: #f5f5f5; border-radius: 4px;">@Model?.PhoneNumber</p>
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <p style="padding: 10px; background-color: #f5f5f5; border-radius: 4px;">@Model?.Email</p>
                </div>

                <div class="form-group">
                    <label class="form-label">Your Message</label>
                    <textarea class="form-textarea" id="contactMessage" placeholder="Tell @Model?.FName about your project..."></textarea>
                </div>

                <div class="modal-footer">
                    <button class="modal-btn modal-btn-cancel" onclick="closeContactModal()">Cancel</button>
                    <button class="modal-btn modal-btn-submit" onclick="sendContactMessage()">Send Message</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Report Modal functionality
        const reportBtn = document.getElementById('reportBtn');
        const modal = document.getElementById('reportModal');
        const closeModal = document.getElementById('closeModal');
        const cancelBtn = document.getElementById('cancelBtn');
        const reasonBtns = document.querySelectorAll('.reason-btn');

        reportBtn.addEventListener('click', () => {
            modal.classList.add('active');
        });

        closeModal.addEventListener('click', () => {
            modal.classList.remove('active');
        });

        cancelBtn.addEventListener('click', () => {
            modal.classList.remove('active');
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
            }
        });

        reasonBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                reasonBtns.forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
            });
        });

        // Contact Modal functionality
        const contactModal = document.getElementById('contactModal');
        const closeContactModalBtn = document.getElementById('closeContactModal');

        function openContactModal() {
            contactModal.classList.add('active');
        }

        function closeContactModal() {
            contactModal.classList.remove('active');
        }

        closeContactModalBtn.addEventListener('click', closeContactModal);

        contactModal.addEventListener('click', (e) => {
            if (e.target === contactModal) {
                closeContactModal();
            }
        });

        function sendContactMessage() {
            const message = document.getElementById('contactMessage').value;
            if (message.trim()) {
                alert('Message sent to @Model?.FullName!');
                closeContactModal();
                document.getElementById('contactMessage').value = '';
            } else {
                alert('Please enter a message.');
            }
        }
    </script>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
