@model APPDEV_PROJECT.Models.LoginViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/Styles/loginPage_styles.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HanapBuhay - Log In</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Left Panel -->
        <div class="left-panel">
            <!-- Add your image here -->
            <div class="login-image-wrapper">
                <img src="~/Images/login.png" alt="Login collage" class="login-image">
            </div>

            <div class="welcome-text">
                <h2>WELCOME BACK!</h2>
                <p>Every login is a step toward progress. Showcase your skills, reach clients who need your expertise, and take charge of your journey with HanapBuhay.</p>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="right-panel">
            <div class="login-form">
                <h2>Log In</h2>

                <form method="post" action="@Url.Action("Login", "Account")">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="color: red; margin-bottom: 15px;">
                            @Html.ValidationSummary(true)
                        </div>
                    }

                    <!-- Hidden userType field - populated from sessionStorage -->
                    <input type="hidden" id="userType" name="userType">

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="@Model?.Email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>

                    <div class="form-options">
                        <label class="remember-me">
                            <input type="checkbox" name="remember">
                            <span>Remember me</span>
                        </label>
                        
                    </div>

                    <button type="submit" class="btn-login">Log In</button>

                    <p class="register-link" id="registerLink">
                        Don't have an account? <a href="@Url.Action("RegisterPage", "Account")">Register</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const userRole = sessionStorage.getItem('userRole');
            const userTypeInput = document.getElementById('userType');
            const registerLink = document.getElementById('registerLink');
            
            if (userRole) {
                const capitalizedRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                userTypeInput.value = capitalizedRole;
                
                // Hide register link for admin users
                if (userRole.toLowerCase() === 'admin') {
                    registerLink.style.display = 'none';
                }
            }
        });
    </script>
</body>
</html>