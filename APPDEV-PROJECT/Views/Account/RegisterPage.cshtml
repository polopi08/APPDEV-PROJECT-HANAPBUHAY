@model APPDEV_PROJECT.Models.RegisterViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/Styles/registerPage_styles.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HanapBuhay - Create Account</title>

</head>
<body>
    <div class="container">
        <!-- Left Panel - Create Account Form -->
        <div class="left-panel">
            <div class="signup-form">
                <div class="form-header">
                    <h2>Create Account</h2>
                </div>

                <form method="post" action="@Url.Action("Register", "Account")">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="color: red; margin-bottom: 15px;">
                            @Html.ValidationSummary(true)
                        </div>
                    }

                    <!-- Hidden userType field - populated from sessionStorage -->
                    <input type="hidden" id="userType" name="userType">

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="@Model?.Email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="password-input">
                            <input type="password" id="password" name="password" required>
                            <span class="password-toggle" id="togglePassword">üëÅ</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <div class="password-input">
                            <input type="password" id="confirmPassword" name="confirmPassword" required>
                            <span class="password-toggle" id="toggleConfirmPassword">üëÅ</span>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <input type="checkbox" id="terms" name="terms" required>
                        <label for="terms">
                            I agree to the <a href="#">terms of service</a> and <a href="#">privacy policy</a>
                        </label>
                    </div>

                    <button type="submit" class="btn-signup">Sign Up</button>
                </form>
            </div>
        </div>

        <!-- Right Panel - Welcome Section -->
        <div class="right-panel">
            <div class="image-container">
                <div class="image-placeholder">
                    <img src="~/Images/register.png" alt="Register collage" class="register-image">
                </div>
            </div>

            <div class="welcome-text">
                <h2>Join HanapBuhay Today</h2>
                <p>Sign up today to join a platform built on trust, skill, and opportunity. Together, workers and clients create lasting connections that strengthen our communities.</p>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const userRole = sessionStorage.getItem('userRole');
            const userTypeInput = document.getElementById('userType');
            
            if (userRole) {
                const capitalizedRole = userRole.charAt(0).toUpperCase() + userRole.slice(1);
                userTypeInput.value = capitalizedRole;
            }
        });

        // Password toggle for password field
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("password");

        togglePassword.addEventListener("click", () => {
            const isPassword = passwordInput.type === "password";
            passwordInput.type = isPassword ? "text" : "password";
            togglePassword.textContent = isPassword ? "üëÅ" : "üëÅ";
        });

        // Password toggle for confirm password field
        const toggleConfirmPassword = document.getElementById("toggleConfirmPassword");
        const confirmPasswordInput = document.getElementById("confirmPassword");

        toggleConfirmPassword.addEventListener("click", () => {
            const isPassword = confirmPasswordInput.type === "password";
            confirmPasswordInput.type = isPassword ? "text" : "password";
            toggleConfirmPassword.textContent = isPassword ? "üëÅ" : "üëÅ";
        });
    </script>

</body>
</html>