          <!--Process-->
    <section class="process-section" id="process">
    <div class="container">
        <div class="section-header">
            <p class="section-label">Process</p>
            <h1 class="section-title">How HanapBuhay works</h1>
            <p class="section-subtitle">Simple steps to connect talent with opportunity</p>
        </div>

        <div class="process-cards-grid">
            <div class="process-card">
                <img src="~/Images/process1.png" alt="Start" class="card-image">
                <div class="card-overlay"></div>
                <div class="card-content">
                    <p class="card-badge">Start</p>
                    <h3 class="card-title">Create your profile</h3>
                    <p class="card-description">Build a professional or client account to get started.</p>
                </div>
            </div>

            <div class="process-card">
                <img src="~/Images/process2.png" alt="Connect" class="card-image">
                <div class="card-overlay"></div>
                <div class="card-content">
                    <p class="card-badge">Connect</p>
                    <h3 class="card-title">Browse and match</h3>
                    <p class="card-description">Explore verified workers or job opportunities that fit your needs.</p>
                </div>
            </div>

            <div class="process-card">
                <img src="~/Images/process3.png" alt="Collaborate" class="card-image">
                <div class="card-overlay"></div>
                <div class="card-content">
                    <p class="card-badge">Collaborate</p>
                    <h3 class="card-title">Communicate and agree on terms</h3>
                    <p class="card-description">Discuss project details and align on terms with confidence.</p>
                </div>
            </div>

            <div class="process-card">
                <img src="~/Images/process4.png" alt="Grow" class="card-image">
                <div class="card-overlay"></div>
                <div class="card-content">
                    <p class="card-badge">Grow</p>
                    <h3 class="card-title">Build your professional reputation</h3>
                    <p class="card-description">Earn reviews and expand your network.</p>
                </div>
            </div>
        </div>

        <div class="cta-container">
            <button class="cta-button" onclick="scrollToTop()">Get started</button>
        </div>
    </div>
</section>

