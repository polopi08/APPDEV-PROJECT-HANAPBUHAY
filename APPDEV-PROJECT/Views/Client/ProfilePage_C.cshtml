@model APPDEV_PROJECT.Models.Entities.Client
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HanapBuhay - My Profile</title>

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <!-- External CSS -->
    <link rel="stylesheet" href="~/Styles/ProfilePage_C_styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <!-- Logo -->
            <div class="logo">
                <img src="~/Images/HanapBuhay_Logo.png" alt="HanapBuhay Logo">
            </div>

            <!-- Buttons on the right -->
            <div class="header-buttons">
                <a href="@Url.Action("SearchPage_C", "Client")" class="header-btn">
                    <ion-icon name="home-outline"></ion-icon>
                </a>
                <a href="@Url.Action("Messages", "Client")" class="header-btn">
                    <ion-icon name="chatbubble-ellipses-outline"></ion-icon>
                </a>
                <a href="@Url.Action("Notifications", "Client")" class="header-btn">
                    <ion-icon name="notifications-outline"></ion-icon>
                </a>
                <a href="@Url.Action("Profile", "Client")" class="header-btn active">
                    <ion-icon name="person-outline"></ion-icon>
                </a>
                <a href="@Url.Action("LandingPage", "Home")" class="header-btn logout-btn">
                    <ion-icon name="log-in-outline"></ion-icon>
                </a>
            </div>
        </div>
    </header>

    <div class="main-wrapper">
        <!-- Profile Content -->
        <div class="profile-main">
            <h2>Personal Information</h2>
            @if (Model != null)
            {
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="success-message">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <form class="profile-form" method="post" action="@Url.Action("UpdateProfile", "Client")">
                    <input type="hidden" name="ClientId" value="@Model.ClientId">
                    <!-- Personal Info Section -->
                    <div class="form-section">
                        <h3>Basic Information</h3>
                        <div class="form-group">
                            <label for="first-name">First Name</label>
                            <input type="text" id="first-name" name="FName" placeholder="First Name" value="@Model.FName" required>
                        </div>
                        <div class="form-group">
                            <label for="middle-name">Middle Name</label>
                            <input type="text" id="middle-name" name="Mname" placeholder="Middle Name" value="@Model.Mname">
                        </div>
                        <div class="form-group">
                            <label for="last-name">Last Name</label>
                            <input type="text" id="last-name" name="LName" placeholder="Last Name" value="@Model.LName" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="Email" placeholder="Email" value="@Model.Email" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="PhoneNumber" placeholder="Phone Number" value="@Model.PhoneNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="dob">Date of Birth</label>
                            <input type="date" id="dob" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="form-group">
                            <label for="sex">Sex</label>
                            <input type="text" id="sex" name="Sex" placeholder="Sex" value="@Model.Sex">
                        </div>
                    </div>

                    <!-- Address Section -->
                    <div class="form-section">
                        <h3>Address & Location</h3>
                        <div class="form-group full-width">
                            <label for="full-address">Full Address</label>
                            <input type="text" id="full-address" name="Address" placeholder="Address" value="@Model.Address" required>
                        </div>
                    </div>

                    <button type="submit" class="btn-save">Save Changes</button>
                </form>
            }
            else
            {
                <div class="error-message">
                    <p>Unable to load profile information. <a href="@Url.Action("InfoPage_C", "Client")">Create profile</a></p>
                </div>
            }
        </div>
    </div>

    <script>
        // Form submission already handled by form tag
    </script>
</body>
</html>
